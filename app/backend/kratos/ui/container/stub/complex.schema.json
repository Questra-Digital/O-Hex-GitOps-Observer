{
  "$id": "https://example.com/complex.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meal"],
  "properties": {
    "meal": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "chef": {
          "type": "string"
        }
      }
    },
    "fruits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "vegetables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/veggie"
      }
    }
  },
  "definitions": {
    "veggie": {
      "type": "object",
      "required": [
        "veggieName",
        "veggieLike"
      ],
      "properties": {
        "veggieName": {
          "type": "string"
        },
        "veggieLike": {
          "type": "boolean"
        },
        "veggieAmount": {
          "type": "number"
        }
      }
    }
  }
}
